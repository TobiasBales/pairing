<div class="nested-fields">
  <div class="form-group">
    <div class="field">
      <br/>
      <%= f.hidden_field :id %>
      <%= f.label :user_id, class: "font-weight-bold" %>
      <%= f.select :user_id, User.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
      <%= link_to_remove_association "remove", f %>
    </div>
  </div>
</div>
